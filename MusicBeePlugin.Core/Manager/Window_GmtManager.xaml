<Window x:Class="MusicBeePlugin.Core.Manager.Window_GmtManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicBeePlugin.Core.Manager"
        mc:Ignorable="d" WindowStyle="ToolWindow" ShowInTaskbar="False" Topmost="True"
        Title="GMT Manager" Height="300" Width="500">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Basic Info">
                <TabItem.Content>
                    <local:Control_BasicInfo x:Name="filesBasicInfo" />
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Genres">
                <TabItem.Content>
                    <local:Control_CollectionManager x:Name="managerGenres" />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
